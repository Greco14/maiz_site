.bolsaHold.safeArea.center-all
	.bolsa-hold.thirds.tercios#bg_bolsa
	.bolsa-hold.thirds.tercios
		.iner-safe
			h2 Reclutamiento
			p 
				| Envíanos tus datos y carga tu currículum
				| en breve nos comunicaremos contigo.
			+campos({type:"text", name:"name", place:"Nombre", elId:"name_bolsa"})
			+campos({type:"email", name:"email", place:"Correo Electrónico", elId:"mail_bolsa"})
			+textareas({ name:"name", place:"Nombre", elId:"name_bolsa"})
			.holdUploads
				p Subir archivo
				input(type="file",placeholder="No file choosen", class="upMe")
				input(type="button", name="subir", value="Subir", class="upMe last")
			.bntEnviar#enviar_solicitud
				p Enviar
